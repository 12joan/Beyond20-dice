{
    "name": "Beyond 20",
    "version": "0.2",
    "manifest_version": 2,
    "description": "Integrates the D&D Beyond Character Sheet to Roll20.",
    "permissions": [ "activeTab", "tabs", "storage", "*://app.roll20.net/editor/", "*://*.dndbeyond.com/*", "*://*/game" ],
    "browser_specific_settings": {
	"gecko": {
	    "id": "beyond20@kakaroto.homelinux.net"
	}
    },
    "icons": {
        "16": "images/icons/icon16.png",
        "24": "images/icons/icon24.png",
        "32": "images/icons/icon32.png",
        "48": "images/icons/icon48.png",
        "64": "images/icons/icon64.png",
        "128": "images/icons/icon128.png",
        "256": "images/icons/icon256.png"
    },
    "options_ui": {
	"page": "options.html",
	"open_in_tab": false
    },
    "page_action": {
	"default_popup": "popup.html",
	"default_icon": "images/icons/icon16.png"
    },
    "web_accessible_resources": [ "images/*", "src/roll20_script.js", "src/fvtt_script.js"],
    "background": {
	"persistent": true,
	"scripts": [ "src/background.js" ]
    },
    "content_scripts": [{
	"matches": [ "*://*.dndbeyond.com/*characters/*" ],
	"js": [
	    "src/jquery-3.4.1.min.js", "src/dndbeyond_character.js"
	]
    },{
	"matches": [ "*://*.dndbeyond.com/monsters/*" ],
	"js": [
	    "src/jquery-3.4.1.min.js", "src/dndbeyond_monster.js"
	]
    },{
	"matches": [ "*://*.dndbeyond.com/vehicles/*" ],
	"js": [
	    "src/jquery-3.4.1.min.js", "src/dndbeyond_vehicle.js"
	]
    },{
	"matches": [ "*://*.dndbeyond.com/spells/*" ],
	"js": [
	    "src/jquery-3.4.1.min.js", "src/dndbeyond_spell.js"
	]
    },{
	"matches": [  "*://*.dndbeyond.com/my-encounters", "*://*.dndbeyond.com/encounters/*" ],
	"js": [
	    "src/jquery-3.4.1.min.js", "src/dndbeyond_encounter.js"
	]
    },{
	"matches": [ "*://app.roll20.net/editor/" ],
	"js": [
	    "src/roll20.js"
	]
    },{
	"matches": [ "*://*/game" ],
	"js": [
	    "src/fvtt.js"
	]
    }]
}
